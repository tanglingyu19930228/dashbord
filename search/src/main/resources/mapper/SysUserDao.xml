<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.search.dao.SysUserDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.search.entity.SysUserEntity" id="sysUserMap">
        <result property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="phone" column="phone"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="delFlag" column="del_flag"/>
        <result property="isAdmin" column="is_admin"/>
    </resultMap>


    <sql id="all_column">
        id,
        user_name,
        phone,
        name,
        password,
        del_flag,
        is_admin,
    </sql>

    <select id="selectOneByUserName" resultType="com.search.entity.SysUserEntity">
        select
        <include refid="all_column"/>
        from sys_user where `name`=#{userName}
    </select>


</mapper>